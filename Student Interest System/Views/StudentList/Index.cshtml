@model List<Student>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paginated List</title>
    <style>
        /* Add your styles here */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            cursor: pointer;
        }

       
        
    </style>
</head>
<body>
    <br />

    <table id="dataTable">
        <thead>
            <tr>
                <th >Name </th>
                <th >Roll Number </th>
                <th >Department </th>
                <th >Degree </th>
                <th >DOB </th>
                <th >City </th>
                <th >Interest </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tableBody">
           
            @for (int i = 0; i < Model.Count; i++)
            {
                var student = Model[i];
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.RollNumber</td>
                    <td>@student.Department</td>
                    <td>@student.DegreeTitle</td>
                    <td>@student.DateOfBirth.ToShortDateString()</td>
                    <td>@student.City</td>
                    <td>@student.Interest</td>
                    <td>

                        <a asp-controller="ViewStudent" asp-action="Index" asp-route-id="@student.Id">View</a>                       |
                        <a asp-controller="EditStudent" asp-action="Index" asp-route-id="@student.Id">Edit</a> |
                        <a asp-controller="DeleteStudent" asp-action="Index" asp-route-id="@student.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

