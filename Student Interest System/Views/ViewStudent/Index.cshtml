@model Student_Interest_System_Mvc.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<style>
    h2 {
        color: #333;
    }

    .student-details {
        margin: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        color: #333;
    }

    td {
        background-color: #fff;
    }
</style>

<h2>Student Details</h2>

<div class="student-details">
    <table>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Full Name</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Roll Number</th>
            <td>@Model.RollNumber</td>
        </tr>
        <tr>
            <th>Email Address</th>
            <td>@Model.EmailAddress</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@Model.DateOfBirth.ToShortDateString()</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Interest</th>
            <td>@Model.Interest</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>@Model.Department</td>
        </tr>
        <tr>
            <th>Degree Title</th>
            <td>@Model.DegreeTitle</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>@Model.Subject</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>@Model.StartDate.ToShortDateString()</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>@Model.EndDate.ToShortDateString()</td>
        </tr>
    </table>
</div>
