@{
    ViewData["Title"] = "Student Interest System";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Student Interest System!</h1>
</div>

@section Styles {
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background: linear-gradient(to right, #3498db, #2c3e50); /* Gradient background */
            color: #fff; /* Text color */
            font-family: 'Arial', sans-serif; /* Specify a font */
        }

        .display-4 {
            font-size: 3.5rem; /* Increase the font size */
            margin-bottom: 20px; /* Add some spacing below the header */
        }

        .text-center {
            height: 100vh; /* 100% of the viewport height */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        /* Add a subtle box shadow to the header */
        .display-4 {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        /* Add a border radius to the container */
        .text-center {
            border-radius: 10px;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.8); /* Box shadow for a lifted effect */
        }
    </style>
}
